{
  "name": "wp-markdown-exporter/wp-markdown-exporter",
  "description": "WordPress plugin for exporting rendered content as Markdown.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.11",
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "WPMarkdownExporter\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPMarkdownExporter\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "lint": "phpcs",
    "stan": "phpstan analyse",
    "test": "phpunit"
  }
}
